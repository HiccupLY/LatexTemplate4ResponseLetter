% define counters for reviewers and their points
\newcounter{reviewer}
\setcounter{reviewer}{0}
\newcounter{comment}[reviewer]
\setcounter{comment}{0}

% This refines the format of how the reviewer/point reference will appear.
\renewcommand{\thepoint}{\textbf{Comment}\,\thereviewer.\arabic{comment}} 


% command declarations for reviewer points and our responses
\newcommand{\reviewersection}{\refstepcounter{reviewer} \bigskip \hrule
                  \section*{Reviewer \thereviewer}}

\newenvironment{generalcomment}
   {\noindent {\textbf{General Comment} }:\  \em}
   {\par }

\newenvironment{generalresponse}
   {\medskip \noindent\textbf{General Response}:\  }
   {\medskip}


\newenvironment{comment}
   % {\refstepcounter{point} \bigskip \noindent {\textbf{Reviewer~Point~\thepoint} } ---\ \em}
   {\refstepcounter{comment} \bigskip \noindent {\textbf{Reviewer~\thepoint} }:\  \em}
   {\par }

